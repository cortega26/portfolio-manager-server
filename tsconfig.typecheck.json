{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "shared/**/*.ts",
    "server/**/*.ts",
    "vitest.config.ts"
  ],
  "exclude": [
    "src/__tests__/**",
    "src/__smoke__/**",
    "e2e/**"
  ]
}
