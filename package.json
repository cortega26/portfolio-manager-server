{
  "name": "portfolio-manager-server",
  "version": "1.0.0",
  "description": "Full-stack portfolio manager with server-side storage and data fetching",
  "main": "server/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "analyze": "cross-env ANALYZE=true npm run build",
    "preview": "vite preview",
    "server": "node server/index.js",
    "lint": "eslint . --max-warnings=0",
    "test": "npm run test:node && vitest run",
    "test:node": "node --enable-source-maps tools/run-tests.mjs",
    "test:fast": "vitest run --coverage=false --reporter=dot",
    "test:coverage": "vitest run --coverage --coverage.reporter=text-summary --coverage.reporter=lcov",
    "test:perf": "node tools/perf/run-perf-suite.mjs",
    "test:e2e": "playwright test",
    "leaks:repo": "gitleaks detect --no-banner",
    "audit:quick": "npm audit --audit-level=critical || true",
    "mutate": "stryker run",
    "mutate:changed": "stryker run --incremental",
    "test:mutation": "npm run mutate",
    "backfill": "node server/cli/backfill.js",
    "verify:deps": "npm ci --no-fund --no-audit",
    "verify:lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings=0",
    "verify:typecheck": "tsc --noEmit --pretty false",
    "verify:build": "npm run build",
    "verify:smoke": "npm run verify:deps && npm run verify:lint && npm run verify:typecheck && npm run verify:build && npm test -- src/__smoke__/",
    "prepare": "husky install"
  },
  "dependencies": {
    "clsx": "^1.2.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "decimal.js": "^10.6.0",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "node-cache": "^5.1.2",
    "node-fetch": "^3.3.1",
    "pino": "^10.0.0",
    "pino-http": "^11.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.21.1",
    "react-window": "^1.8.11",
    "recharts": "^2.7.2",
    "uuid": "^9.0.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.0.0",
    "@eslint/js": "^9.11.1",
    "@playwright/test": "^1.49.1",
    "@stryker-mutator/core": "^9.2.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^20.19.20",
    "@vitejs/plugin-react": "^4.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "autoprefixer": "^10.4.15",
    "c8": "^9.1.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.11.1",
    "fast-check": "^3.23.2",
    "gitleaks": "file:tools/gitleaks",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "jsdom": "^24.0.0",
    "msw": "^2.11.3",
    "postcss": "^8.4.33",
    "prettier": "^3.2.5",
    "rollup-plugin-visualizer": "^5.12.0",
    "supertest": "^7.0.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4"
  },
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  }
}
